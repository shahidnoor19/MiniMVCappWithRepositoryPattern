@model List<Student>
@{
}

<div class="row">
    <div class="col-md-6">
        <h1>All Students</h1>
    </div>
    <div class="col-md-6 text-center">
        <a asp-controller="Students" asp-action="Add">Add New Student</a>
    </div>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Class</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Class</td>
                    <td><a href="Students/View/@student.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
